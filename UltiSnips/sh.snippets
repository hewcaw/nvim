snippet srcfile "Source file" b
DIR="${BASH_SOURCE%/*}"
if [[ ! -d "$DIR" ]]; then DIR="$PWD"; fi
endsnippet

snippet srcfiles "Source multiple files" b
declare -a src_files=($1)

for src_file in ${src_files[@]}; do
        DIR="${BASH_SOURCE%/*}"
        if [[ ! -d "$DIR" ]]; then DIR="$PWD"; fi

        source "$DIR/$src_file"
done$0
endsnippet
